# Arquivos de texto
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos C#
[*.cs]
indent_style = space
indent_size = 4

# Arquivos de solução
[*.{sln,csproj}]
indent_style = space
indent_size = 2

# Arquivos de marcação
[*.html, *.css, *.js]
indent_style = space
indent_size = 2

# Arquivos de aplicação dotnet
[*.csproj, *.sln, *.cs]
indent_style = space
indent_size = 4